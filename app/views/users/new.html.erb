<%= form_for @user do |form| %>
<%= render "layouts/errors", obj: @user %>

  <div class="col-8 mx-auto">
<div class="card ">
    <div class="card-body text-right p-5">
      <div class="form-group row ">
        <%= form.label :name %>
        <div class="col-6">
        <%= form.text_field :name,  autofocus: true, class:"form-control",  autocomplete: "Username", placeholder: "Enter Name", required: true %>
      </div>
      </div>

      <div class="form-group row">
        <%= form.label :email%>
        <div class="col-6">
        <%= form.email_field :email, autocomplete: "email", class:"form-control", placeholder: "Enter Email ID", required: true  %>
      </div>
      </div>

      <div class="form-group row">
        <%= form.label :password %>
        <div class="col-6">
        <%= form.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "Enter Password", required: true %>
      </div>
     </div>

      <div class="form-group row">
        <%= form.label :password_confirmation %>
        <div class="col-6">
        <%= form.password_field :password_confirmation ,autocomplete: "current-password_confirmation", class:"form-control", placeholder: "confirm Password", required: true %>
      </div>
    </div>
  </div>
</div>
</div>
<div class="row justify-content-center my-4">
  <div class="col-2">
    <strong><%= link_to "Back", root_path, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" %></strong>
  </div>
  <div class="col-2">
    <strong><%= form.submit( "signup",{ class: "btn btn-success btn-md btn-block my-2 my-sm-0", data:{disable_with: "logging in.."}})%></strong>
  </div>
</div>
<% end %>
