<%= form_for @user do |form| %>
<%= render "layouts/errors", obj: @user %>

<div class="card ">
  <div class="col-8 mx-auto">
    <div class="card-body text-center">
      <div class="field row">
        <%= form.label :name %>
        <%= form.text_field :name,  autofocus: true,  autocomplete: "Username", placeholder: "Enter Name", required: true %>
      </div>

      <div class="field row">
        <%= form.label :email%>
        <%= form.email_field :email, autocomplete: "email", placeholder: "Enter Email ID", required: true  %>
      </div>

      <div class="field row">
        <%= form.label :password %>
        <%= form.password_field :password, autocomplete: "current-password", placeholder: "Enter Password", required: true %>
      </div>

      <div class="field row">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation ,autocomplete: "current-password_confirmation", placeholder: "confirm Password", required: true %>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center my-4">
  <div class="col-2">
    <strong><%= link_to "Back", root_path, class: "btn btn-secondary btn-md btn-block my-2 my-sm-0" %></strong>
  </div>
  <div class="col-2">
    <strong><%= form.submit( "signup",{ class: "btn btn-success btn-md btn-block my-2 my-sm-0", data:{disable_with: "logging in.."}})%></strong>
  </div>
</div>
<% end %>
