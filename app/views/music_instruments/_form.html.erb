<%= form_with(model: music_instrument, local: true) do |form| %>
  <% if music_instrument.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(music_instrument.errors.count, "error") %> prohibited this music_instrument from being saved:</h2>

      <ul>
        <% music_instrument.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :item_tittle %>
    <%= form.text_field :item_tittle %>
  </div>

  <div class="field">
            <%= form.label :music_category,"Music Category:", for: "music_category"  %>
                <%= form.select(:music_category_id)  do %>
                  <% MusicCategory.all.each do |c| %>
                    <%= content_tag(:option, c.category, value: c.id) %>
                  <% end %>
                <% end %>
              </div>
  <div class="field">
    <%= form.label :item_description %>
    <%= form.text_area :item_description %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id%>
  </div>



  <div class="field">
    <%= form.label :phone_number %>
    <%= form.number_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>



  <div class="field">
      <%=form.label :image %>
      <%=form.file_field :images , multiple:true %>
    </div>

    <% if music_instrument.images.attached?%>
    <%=form.label:remove_image%>
    <%= form.check_box:remove_image%>
    <% end%>

    <span>Users role</span>
    <div class="field">
    <%= form.radio_button :role, "buyer" %>
    <%= form.label :role_buyer, "Buyer" %>
    <%= form.radio_button :role, "seller" %>
    <%= form.label :role_seller, "Seller" %>
    </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
