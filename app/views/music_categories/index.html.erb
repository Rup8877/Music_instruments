<div class=" container ">
  <table class="table table-bordered">

  <thead>
    <tr>
      <th>Category</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @music_categories.each do |music_category| %>
      <tr>
        <td><%= music_category.category %></td>
        <td><%= link_to 'Show', music_category %></td>
        <td><%= link_to 'Edit', edit_music_category_path(music_category) %></td>
        <td><%= link_to 'Destroy', music_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<div class="row justify-content-center my-4">
  <div class="col-2">
    <strong><%= link_to "Add Music Category", new_music_category_path, class: "btn btn-primary btn-md btn-block my-2 my-sm-0" %></strong>
  </div>
</div>
